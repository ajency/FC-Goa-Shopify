<div data-section-id="{{ section.id }}" data-section-type="section-banner-v6" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="container-fluid pl-0 ">
    <div class="section-discover-v1">
      <div class="row ">
        {% if section.settings.enable_image_banner1 %}
        <div class="col-lg-3 col-12 col-sm-6 col-md-3">
          <div class="picture">
            <a href="{{section.settings.banner_url1}}">
              {% if section.settings.image_banner1 != blank %}
                  <img src="{{section.settings.image_banner1|img_url:'master'}}" class="img-fluid" alt="">
              {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </a>
          </div>
        </div>
        {% endif %}
        {% if section.settings.enable_image_banner2 %}
        <div class="col-lg-3 col-12 col-sm-6 col-md-3">
          <div class="picture">
            <a href="{{section.settings.banner_url2}}">
              {% if section.settings.image_banner2 != blank %}
                  <img src="{{section.settings.image_banner2|img_url:'master'}}" class="img-fluid" alt="">
              {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </a>
          </div>
        </div>
        {% endif %}
        {% if section.settings.enable_inforight %}
        <div class="col-lg-5 col-12 col-sm-12 col-md-5">
          <div class="content-discover">
            {% if section.settings.section_title != blank %}
            	<h3>{{section.settings.section_title}}</h3>
            {% endif %}
            {% if section.settings.section_description != blank %}
            	<p>{{section.settings.section_description}}</p>
            {% endif %}
            {% if section.settings.button_name != blank %}
              <a href="{{ section.settings.button_url }}" >{{section.settings.button_name}}</a>
             {% endif %}
          </div>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Banner v6 H2",
  "class": "index-section",
  "settings": [    
	{
      "type": "header",
      "content": "Info Left"
    },
	{
      "type": "checkbox",
      "id": "enable_image_banner1",
      "label": "Enable Image left 1?",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image_banner1",
      "label": "Image left 1",
	  "info": "445 x 570px recommended"
    },	
	{	
      "type": "url",
      "id": "banner_url1",
      "label": "URL Image left 1",
      "default": "/collections/all"
    },
	{
      "type": "checkbox",
      "id": "enable_image_banner2",
      "label": "Enable Image left 2?",
      "default": true
    },
	{	
      "type": "image_picker",
      "id": "image_banner2",
      "label": "Image left 2",
	  "info": "445 x 570px recommended"
    },
	{	
      "type": "url",
      "id": "banner_url2",
      "label": "URL Image left 2",
      "default": "/collections/all"
    },
	{
      "type": "header",
      "content": "Info Right"
    },
	{
      "type": "checkbox",
      "id": "enable_inforight",
      "label": "Enable Info Right ?",
      "default": true
    },
	{
      "type": "text",
      "id": "section_title",
      "label": "Title",
      "default": "Fresh streetstyle<br> for the new generation"
    },
	{
      "type": "text",
      "id": "section_description",
      "label": "Description",
      "default": "Donec sed odio dui. Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo. condimentum nibh, ut fermentum massa justo. Donec sed odio dui. Fusce dapibus, tellus ac cursus commodo."
    },
	{
      "type": "text",
      "id": "button_name",
      "label": "Buttom name",
      "default": "DISCOVER NOW"
    },
	{	
      "type": "url",
      "id": "button_url",
      "label": "URL Button",
      "default": "/collections/all"
    },
	{
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Banner v6 H2",
      "category": "Banner"
    }
  ]
}
{% endschema %}


