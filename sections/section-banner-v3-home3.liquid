<div data-section-id="{{ section.id }}" data-section-type="section-banner-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-banner-v3">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-6 col-12 col-md-6">
          <div class="picture">
            <a href="{{section.settings.banner_url1}}">
              {% if section.settings.image-banner1 != blank %}
              	<img src="{{section.settings.image-banner1|img_url:'master'}}" class="img-fluid" alt="banner">
              {% else %}
              	{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </a>
          </div>
        </div>
        <div class="col-lg-6 col-12 col-md-6">
          <div class="picture">
            <a href="{{section.settings.banner_url2}}">
              {% if section.settings.image-banner2 != blank %}
              	<img src="{{section.settings.image-banner2|img_url:'master'}}" class="img-fluid" alt="banner">
              {% else %}
              	{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </a>
          </div>
        </div>
        <div class="banner text-center">
            {% if section.settings.image_small_center != blank %}
            	<img src="{{section.settings.image_small_center|img_url:'master'}}" class="img-fluid" alt="banner">
            {% else %}
            	{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          {% if section.settings.section_title != blank %}          
          	<p class="mb-0">{{section.settings.section_title}}</p>
          {% endif %}
          <div class="link d-flex justify-content-between">
            {% if section.settings.button_1_name != blank %}
              <a href="{{ section.settings.button_1_url }}" class="men">{{section.settings.button_1_name}}</a>
            {% endif %}
            {% if section.settings.buttom_woman != blank %}
              <a href="{{ section.settings.button_2_url }}">{{section.settings.buttom_woman}}</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Banner v3 H3",
  "class": "index-section",
  "settings": [
	{
      "type": "header",
      "content": "Image left"
    },
	{
      "type": "image_picker",
      "id": "image-banner1",
      "label": "Image Left",
	  "info": "945 x 700px recommended"
    },
	{
      "type": "url",
      "id": "banner_url1",
      "label": "URL Image",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Info center"
    },
	{
      "type": "image_picker",
      "id": "image_small_center",
      "label": "Image Small Center",
	  "info": "540 x 150px recommended"
    },
	{
      "type": "text",
      "id": "section_title",
      "label": "Title Banner",
      "default": "JUST FOR YOU"
    },
	{
      "type": "text",
      "id": "button_1_name",
      "label": "Button 1 name",
      "default": "MEN COLLECTION"
    },
	{
      "type": "url",
      "id": "button_1_url",
      "label": "URL Button 1",
      "default": "/collections/all"
    },
	{
      "type": "text",
      "id": "buttom_woman",
      "label": "Button 2 name",
      "default": "WOMAN COLLECTION"
    },
	{
      "type": "url",
      "id": "button_2_url",
      "label": "URL Button 2",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Image Right"
    },
	{
      "type": "image_picker",
      "id": "image-banner2",
      "label": "Image Right",
	  "info": "945 x 700px recommended"
    },
	{
      "type": "url",
      "id": "banner_url2",
      "label": "URL image",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Banner v3 H3",
      "category": "Banner"
    }
  ]
}
{% endschema %}


