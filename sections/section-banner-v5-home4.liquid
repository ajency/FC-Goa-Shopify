<div data-section-id="{{ section.id }}" data-section-type="section-banner-v5" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="container-fluid px-0">
    <div class="section-banner-v5" style="background-image: url({% if section.settings.backgroud_banner != blank %}{{section.settings.backgroud_banner|img_url:'master'}}{% else %}//placehold.it/1920x600{% endif %})">
      <div class="row align-items-center">
        {% if section.settings.enable_infoleft %}
        <div class="col-lg-5 col-12 col-sm-7 col-md-7">
          <div class="box-banner">
            {% if section.settings.section_title != blank %}
          		<h3>{{section.settings.section_title}}</h3>
            {% endif %}
            {% if section.settings.section_description != blank %}
              <p>{{section.settings.section_description}}</p>
            {% endif %}
            {% if section.settings.button_name != blank %}
              <a href="{{ section.settings.buton_url}}" >{{section.settings.button_name}}</a>
            {% endif %}
          </div>
        </div>
        {% endif %}
        
        <div class="col-lg-7 col-12 col-sm-5 col-md-5 text-center">
          {% if section.settings.enable_img %}
          <div class="piture">
            <a href="{{section.settings.image_url}}" >
              {% if section.settings.image-banner != blank %}
                  <img src="{{section.settings.image-banner|img_url:'master'}}" class="img-fluid" alt="">
              {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </a>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Banner v5 H4",
  "class": "index-section",
  "settings": [ 
	{
      "type": "header",
      "content": "Info Left"
    },
	{
      "type": "checkbox",
      "id": "enable_infoleft",
      "label": "Enable Info Left?",
      "default": true
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Title",
      "default": "Introducing Over pink bags collection."
    },
 	{
      "type": "text",
      "id": "section_description",
      "label": "Description ",
      "default": "Donec sed odio dui. Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo. "
    },
    {
      "type": "text",
      "id": "button_name",
      "label": "button name",
      "default": "VIEW COLLECTION"
    },
	{
      "type": "url",
      "id": "Buton_url",
      "label": "URL button name",
      "default": "/collections/all"
    },
	{
      "type": "header",
      "content": "Info Right"
    },
	{
      "type": "checkbox",
      "id": "enable_img",
      "label": "Enable Image banner right?",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image-banner",
      "label": "Image",
	  "info": "650 x 500px recommended"
    },
	{
      "type": "url",
      "id": "image_url",
      "label": "URL image",
      "default": "/collections/all"
    },
	{
      "type": "header",
      "content": "Info Image Background"
    },
    {
      "type": "image_picker",
      "id": "backgroud_banner",
      "label": "Backgroud banner ",
	  "info": "1920 x 600px recommended"
    },   
	{
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Banner v5 H4",
      "category": "Banner"
    }
  ]
}
{% endschema %}


