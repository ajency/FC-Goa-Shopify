<!-- /sections/footer.liquid -->
{% if section.settings.select_fts == "footer_v1" %}
{% include 'footer-v1' %}
{% elsif section.settings.select_fts == "footer_v2" %}
{% include 'footer-v2' %}
{% elsif section.settings.select_fts == "footer_v3" %}
{% include 'footer-v3' %}
{% elsif section.settings.select_fts == "footer_v4" %}
{% include 'footer-v4' %}
{% endif %}

{% schema %}
{
  "name": "Footer",
  "class": "index-section",
  "settings": [
    {
      "type": "select",
      "id": "select_fts",
      "label": "Select Footer Style",
      "options": [
        {
          "value": "footer_v1",
          "label": "Footer v1"
        },
        {
          "value": "footer_v2",
          "label": "Footer v2"
        },
        {
          "value": "footer_v3",
          "label": "Footer v3"
        },
        {
          "value": "footer_v4",
          "label": "Footer v4"
        }
      ],
      "default": "footer_v1"
    }
  ]
}
{% endschema %}