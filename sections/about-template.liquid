<section>
  <div class="content-pages">
    <div class="container">
      <div class="content-about">
        <h2 class="title30 dosis-font text-uppercase dark font-bold">{{page.title}}</h2>
        {% if section.settings.enable_s_content %}
        <p class="desc">{{section.settings.content_des}}</p>
        {% endif %}
        
        {% if section.settings.enable_s_blockquote %}
        <p class="blockquote">{{section.settings.blockquote_des}}</p>
        {% endif %}
        
        {% if section.settings.enable_s_info %}
        <div class="about-why-choise">
          <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
              <h2 class="title18 rale-font text-uppercase dark  font-bold">{{section.settings.info_title}}</h2>
              <div class="about-accordion toggle-tab">
                {% if section.blocks.size > 0 %}
                {% for block in section.blocks %}
                {% if block.type == "info" %}
                <div class="item-toggle-tab {% if forloop.first %}active{% endif%}">
                  <div class="toggle-tab-title"><span class="bg-color"><i class="{{block.settings.b_info_icon}}"></i></span><h2 class="dark">{{block.settings.b_info_title}}</h2></div>
                  <p class="desc toggle-tab-content">{{block.settings.b_info_content}}</p>
                </div>
                {% endif %}
                {% endfor %}
                {% endif %}
              </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <div class="banner-adv overlay-image zoom-image">
                <a href="{{section.settings.info_url}}" class="adv-thumb-link">
                  {% if section.settings.info_image != blank %}
                  <img src="{{section.settings.info_image|img_url:'master'}}" alt="" />
                  {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </a>
              </div>
            </div>
          </div>
        </div>
        {% endif %}
        
        {% if section.settings.enable_s_testimonial %}
        <div class="about-client">
          <h2 class="title18 rale-font text-uppercase dark  font-bold">{{section.settings.testimonial_title}}</h2>
          <div class="about-client-slider">
            <div class="wrap-item" data-autoplay="true" data-pagination="false" data-itemscustom="[[0,1],[560,2],[990,3]]">
              {% if section.blocks.size > 0 %}
              {% for block in section.blocks %}
              {% if block.type == "testimonial" %}
              <div class="item-about-client">
                <div class="client-thumb">
                  <a href="{{block.settings.b_testimonial_url}}">
                    {% if block.settings.b_testimonial_img != blank %}
                    <img src="{{block.settings.b_testimonial_img|img_url:'master'}}" alt="" />
                    {% else %}
                    <img src="//placehold.it/70x70" alt="" />
                    {% endif %}
                  </a>
                </div>
                <div class="client-info">
                  <p class="desc">{{block.settings.b_testimonial_content}}</p>
                  <h3 class="title14 text-uppercase dosis-font"><a href="{{block.settings.b_testimonial_url}}" class="dark">{{block.settings.b_testimonial_title}}</a></h3>
                  <span class="silver">{{block.settings.b_testimonial_des}}</span>
                </div>
              </div>
              {% endif %}
              {% endfor %}
              {% endif %}
            </div>
          </div>
        </div>
        {% endif %}
        
        {% if section.settings.enable_s_servicebox %}
        <div class="about-service">
          <div class="row">
            {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
            {% if block.type == "servicebox" %}
            <div class="col-md-4 col-sm-4 col-xs-12">
              <div class="item-about-service text-center white" style="background: {{block.settings.b_ser_bgcolor}};">
                <a href="{{block.settings.b_ser_url}}" class="wobble-horizontal"><i class="{{block.settings.b_ser_icon}}"></i></a>
                <h2 class="title30">{{block.settings.b_ser_title}}</h2>
              </div>
            </div>
            {% endif %}
            {% endfor %}
            {% endif %}
          </div>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

