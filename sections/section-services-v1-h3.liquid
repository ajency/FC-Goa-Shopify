<div data-section-id="{{ section.id }}" data-section-type="section-services-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-services-v1">
    <div class="container">
      <div class="row justify-content-center">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == "service" %}
        <div class="col-lg-3 col-sm-6 text-center content">
          <span class="icon">          
            <i class="{{block.settings.block_icon}} "></i>
          </span>
          {% if block.settings.block_title != blank %}
          <p class="mb-0">{{block.settings.block_title}}</p>
          {% endif %}
          {% if block.settings.block_content != blank %}          	
          <span>{{block.settings.block_content}}</span>
          {% endif %}
        </div>
        {% endif %}
        {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Services v1 H3",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
    
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service item",
      "settings": [
        {
          "type": "text",
          "id": "block_icon",
          "label": "Icon",
          "default": "ti-credit-card",
          "info": "[Get icon in here](https://themify.me/themify-icons)"
        },
        {
          "type": "text",
          "id": "block_title",
          "label": "Title",
          "default": "SECURED PAYMENT"
        },
        {
          "type": "text",
          "id": "block_content",
          "label": "Content",
          "default": "Visa, Mastercard, Amex, Paypal"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Services v1 H3",
      "category": "Services",
      "blocks": [
        {
          "type": "service",
          "settings": {
            "block_icon": "ti-credit-card",
            "block_title": "SECURED PAYMENT",
            "block_content": "Visa, Mastercard, Amex, Paypal"
          }
        },
        {
          "type": "service",
          "settings": {
            "block_icon": "ti-truck",
            "block_title": "FREE DELIVERY",
            "block_content": "Within 24 hours ~ 48 hours"
          }
        },
        {
          "type": "service",
          "settings": {
            "block_icon": "ti-package",
            "block_title": "30 DAYS RETURN",
            "block_content": "Free, 12 days after delivery"
          }
        },
        {
          "type": "service",
          "settings": {
            "block_icon": "ti-settings",
            "block_title": "CUSTOMER SERVICE",
            "block_content": "Frequently asked questions"
          }
        }
      ]
    }
  ]
}
{% endschema %}


