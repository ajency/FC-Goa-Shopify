      },
	  {
        "type": "text",
        "id": "icon_tab_login_mobile",
        "label": "Icon tab login moblile",
        "default": "ti-user",
        "info": "[Get icon in here](https://themify.me/themify-icons)"
      },
	  {
        "type": "text",
        "id": "icon_tab_regester_mobile",
        "label": "Icon tab regester moblile",
        "default": "ti-pencil-alt",
        "info": "[Get icon in here](https://themify.me/themify-icons)"
