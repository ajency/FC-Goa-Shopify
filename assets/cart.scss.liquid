.wrap2 {
    .content-pages.cart_edit{
        margin-top: 40px;
        .title-36{
            @media (max-width: 575px) {
                margin-top: 30px;
                margin-bottom: 30px;
                text-align: center;
            }
        }
    }
    .row.my-40{
        @media (max-width: 575px) {
            margin-top: 0;
        }
    }
}

.cart{
    .table-responsive{
        table{
            tbody{
                tr.cart__row{
                    border-left: 1px solid #E0E0E0;
                    border-right: 1px solid #E0E0E0;
                    td{
                        border-bottom: 1px solid #E0E0E0;
                        &.product-thumbnail{                            
                            a{
                                display: inline-block;
                                vertical-align: middle;
                                img{
                                    background: #F5F5F5;
                                    padding: 5px;
                                }
                            }
                            @media (min-width: 576px) {
                                width: 15%;
                            }
                            @media (max-width: 575px) {
                                width: 35%;
                                text-align: left;
                            }
                        }
                        &.product-name{
                            a{
                                color: #060E59;
                                font-weight: 400;
                                @media (max-width: 575px) {
                                    display: inline-block;
                                    word-break: break-word;
                                    padding-right: 25px;
                                }
                            }
                            @media (max-width: 575px) {
                                width: 65%;
                                text-align: left !important;
                            }
                        }
                        &.product-remove{
                            i{
                                font-size: 15px;
                            }
						}
						&.product-subtotal{
                            @media (min-width: 992px) {
                                width: 15%;
                            }
                            @media (max-width: 575px) {
                                width: 65%;
                                text-align: left !important;
                            }
						}
                        &.product-quantity{
                            .js-qty{
                                border: 1px solid #E0E0E0;
                                .js-qty__adjust{
                                    color: #060E59;
                                    .icon{
                                        color: #060E59;
                                    }
                                }
                                .js-qty__adjust--minus{
                                    left: 0;
                                }
                                .js-qty__num{
                                    color: #060E59;
                                }
                            }
                            @media (max-width: 575px) {
                                width: 35%;
                                text-align: left !important;
                                .js-qty{
                                    float: none;
                                }
                            }
                        }
                        &.product-remove{
                            @media (max-width: 575px) {
                               position: absolute;
                               top: 0;
                               right: 0;
                            }
                        }
                    }
                    @media (max-width: 575px) {
                        margin-bottom: 15px;
                        display: flex;
                        flex-wrap: wrap;
                        td{
                            border: 0;
                            &:before{
                                display: none;
                            }
                        }
                    }
                }
            }
        }
	}
	.shipping{
		label.text-blue{
			color: #060E59 !important;
		}
		textarea{
			border: 1px solid #060E59 !important;
			resize: none;
			height: 100px;
			font-size: 14px;
			line-height: 26px;
			max-width: 700px;
		}
	}
	.bottom_carrt{
		margin-top: 30px;
		h5{
			font-weight: normal;
			font-size: 24px;
			line-height: 29px;
			color: #060E59 !important;
			.total-title{
				font-weight: normal;
				font-size: 18px;
				line-height: 22px;
				position: relative;
				top: -2px;
				margin-right: 10px;
            }
            @media (max-width: 575px) {
                text-align: center;
            }
        }
        .update_chechout{
            @media (max-width: 575px) {
                margin-top: 30px;
            }
        }
		input.button{
			text-align: left;
			padding: 10px 20px;
		}
		.checkout-button{
			margin-left: 10px;
		}
	}
}

.content-pages.cart_edit .cart_item a, 
.content-pages.cart_edit .product-price span, 
.content-pages.cart_edit .product-subtotal span{
    @media (max-width: 575px) {
        font-size: 16px !important;
    }
}