.blue-background-gradient{
    background: linear-gradient(99.39deg, #600F47 -2.96%, #060E66 89.32%);
}

.orange-background-gradient{
    background: linear-gradient(99.38deg, #FB910B -62.31%, #FF2801 89.32%);
}

.text-white{
    color: #fff;
}

.text-orange{
    color: #FF6600;
}

.text-blue{
    color: #060E59;
}

.font-size-18{
    font-size: 18px;
    line-height: 22px;
}

.btn-basic{
    font-size: 16px;
    line-height: 20px;
    color: white;
    padding: 12px 30px;
    text-decoration: none;
    border-radius: 0;
    min-width: 120px;
    &.btn-white{
        color: #060E59;
        background: #fff;
    }
}