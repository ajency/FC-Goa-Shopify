.blue-background-gradient{
    background: linear-gradient(99.39deg, #600F47 -2.96%, #060E66 89.32%);
}

.orange-background-gradient{
    background: linear-gradient(99.38deg, #FB910B -62.31%, #FF2801 89.32%);
}

.text-white{
    color: #fff;
}

.text-orange{
    color: #FF6600;
}

.text-blue{
    color: #060E59;
}

.font-size-18{
    font-size: 18px;
    line-height: 22px;
}

.btn-basic{
    font-size: 16px;
    line-height: 20px;
    color: white;
    padding: 12px 30px;
    text-decoration: none;
    border-radius: 0;
    min-width: 120px;
    &.btn-white{
        color: #060E59;
        background: #fff;
        //border: 1px solid #060E59;
    }
    &.btn-blue{
        color: #fff;
        background: #060E59;
        //border: 1px solid #fff;
    }
}

.title-36{
    font-size: 36px;
    line-height: 44px;
}

.my-40{
    margin: 40px 0;
}

.border-blue{
    border: 1px solid #060E59 !important;
}

.w-50{
    width: 50%;
}

.btn-bg-blue{
    background: #060E59 !important;
    border: 1px solid #060E59 !important;
    color: #fff;
}

.btn-bg-white{
    background: #fff !important;
    border: 1px solid #060E59 !important;
    color: #060E59;
}

.col-padding {
    @media (min-width: 768px) {
        padding-left: 10px !important;
        padding-right: 10px !important;  
    }
}

.row-margin{
    @media (min-width: 768px) {
        margin-left: -10px !important; 
        margin-right: -10px !important;
    }
}

.page-content{
    p{
        margin-bottom: 30px;
    }
}

.site-content{
    min-height: calc(100vh - 288px);
}