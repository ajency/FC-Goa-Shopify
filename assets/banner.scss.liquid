.product-detail{
	.product-img-box {
		> div {
			display : none;	
			&:first-child {
				display: block;
			}
		}
	
		&.slick-initialized {
			> div {
				display: block;
			}
		}
	}
	.box-thumbnail-pr {
		> div {
			display : none;	
			&:first-child {
				display: block;
				img{
					background: transparent;
				}
			}
		}
	
		&.slick-initialized {
			> div {
				display: block;
			}
		}
	}
}

.shopify-section{
	.section-slide-v4{
		margin-top: 30px;
		margin-bottom: 30px;
		> .container{
			@media (max-width: 575px) {
				padding-left: 0;
				padding-right: 0;
			}
		}
		.side-v4{
			.slick-list{
				.itemv4{
					.picture-side3 {
						position: relative;
						padding-top: 34.2%;        
						img {
							position: absolute;
							top: 0;
							left: 0;
							right: 0;
							bottom: 0;
						}
						.box-content{
							position: absolute;
							top: 50%;
							transform: translateY(-50%);
							h1{
								font-weight: normal;
								font-size: 60px;
								line-height: 73px;
								margin-bottom: 0;
								span{
									color: #FF6600;
									font-weight: normal;
									font-size: 60px;
									line-height: 73px;
									@media (max-width: 767px) {
										font-size: 24px;
										line-height: 29px;
									}
								}
								@media (max-width: 767px) {
									font-size: 24px;
									line-height: 29px;
								}
							}
							h4{
								font-weight: normal;
								font-size: 24px;
								line-height: 29px;
								margin-bottom: 0;
								@media (max-width: 767px) {
									font-size: 12px;
									line-height: 15px;
								}
							}
							p{
								padding-bottom: 0;
							}
							@media (max-width: 575px) {
								left: 12%;
							}
						}
						@media (max-width: 767px){
							padding-top: 56.3%;
						}
					}
				}
			}
			.slick-dots{
				display: none !important;
			}
			.slick-arrow{
				background-color: transparent;
				&:before{
					opacity: 1;
				}
				@media (max-width: 768px) {
					visibility: visible;
					opacity: 1;	
					&.slick-prev {
						left: 1%;
					}		
					&.slick-next {
						right: 1%;
					}				
				}
			}
		}
		&:hover {
			.slick-prev {
				left: 1%;
			}		
			.slick-next {
				right: 1%;
			}
		}
		@media (max-width: 575px) {
			margin-top: 0;
			margin-bottom: 20px;
			margin-left: -15px;
			margin-right: -15px;
		}
	}
}

