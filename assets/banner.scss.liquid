.banner {
    &-container {
        position: relative;        
    }
    @include media-max(sm){
        > .container {
            padding-left: 0;
            padding-right: 0;
        }
	}
	
    .owl-stage-outer {
        width: 100%;
    }

    &-image {
        position: relative;
        padding-top: 29.7%;
        
        img {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }

        @include media-max (sm){
            padding-top: 56.3%;
        }
    }
}

.owl {
    &-carousel {
        .owl-nav {
            @include media-max(sm) {
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                transform: translateY(-50%);
                margin-top: -50px;

                button[type="button"]{
                    span {
                        font-size: 0;
                        background-image: url(../assets/images/arrow-right-white.svg);
                        width: 10px;
                        height: 20px;
                        // background-size: 18px 28px;
                        background-size: contain;
                        background-position: 50% 10%;
                        background-repeat: no-repeat;
                        display: block;
                        margin: 0 auto;
                                           
                    }
                    &.owl-next,
                    &.owl-prev {
                        border: 0;
                        padding: 6px !important;
                        width: 35px;
                        height: 35px;
                        outline: 0;
                    }
                    &.owl-next {
                        float: right;
                    }                    
                    &.owl-prev { 
                        float: left;
                                      
                        span {
                            transform: rotate(180deg);
                        }
                    }                   
                }
            }
            
        }
    }
}

.banner-holder{
    .owl-carousel:not(.owl-loaded){
        position: relative;
        padding-top: 82.9%;
        display: block;
        opacity: 0;
        .banner-container {
            position: absolute;
        }
    }
    @media (min-width: 768px) {
        .owl-carousel:not(.owl-loaded){
            position: relative;
            padding-top: 36.44%;
            display: block;
            opacity: 0;
            .banner-container {
                position: absolute;
            }
        }
    }
}