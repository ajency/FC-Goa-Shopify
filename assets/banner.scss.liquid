.banner{
	.container{
		position: relative;
		@media (max-width: 767px) {
			padding-left: 0;
			padding-right: 0;
		}
	}
	.owl-stage-outer {
        width: 100%;
	}
	.banner-image {
        position: relative;
        padding-top: 34.2%;        
        img {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
       	@media (max-width: 767px){
            padding-top: 56.3%;
        }
	}
	.banner-container-text {
		position: absolute;
		top: 50%;
		left: 0;
		right: 0;
		transform: translateY(-50%);
		.text-wrap{
			.banner-title{
				@media (max-width: 767px) {
					font-size: 12px;
					line-height: 15px;
				}				
			}
			.banner-sub-title{
				@media (max-width: 767px) {
					font-size: 24px;
					line-height: 29px;
				}	
			}
			@media (max-width: 575px) {
				margin-left: 15%;
			}
		}
	}
}

.owl-carousel{
	.owl-nav{
		position: absolute;
		top: 50%;
		left: 0;
		right: 0;
		transform: translateY(-50%);
		padding: 0 10px;
		button[type="button"]{
			span {
				font-size: 0;
				background-image: url(arrow-right-white.svg);
				width: 10px;
				height: 20px;
				background-size: contain;
				background-position: 50% 10%;
				background-repeat: no-repeat;
				display: block;
				margin: 0 auto;
								   
			}
			&.owl-next,
			&.owl-prev {
				border: 0;
				padding: 6px !important;
				width: 35px;
				height: 35px;
				outline: 0;
			}
			&.owl-next {
				float: right;
			}                    
			&.owl-prev { 
				float: left;
							  
				span {
					transform: rotate(180deg);
				}
			}                   
		}
	}
}

.section-slide-v4{
    .side-v4:not(.slick-initialized){
        position: relative;
        padding-top: 56.3%;
        display: block;
        opacity: 0;
        .itemv4 {
            position: absolute;
        }
    }
    @media (min-width: 768px) {
        .side-v4:not(.slick-initialized){
            position: relative;
            padding-top: 34.2%;
            display: block;
            opacity: 0;
            .itemv4 {
                position: absolute;
            }
        }
    }
}

.product-wrap{
	.product-data{
		h4{
			@media (max-width: 991px) {
				font-size: 18px;
			}
		}
		.product-price{
			@media (max-width: 767px) {
				font-weight: 700 !important;
			}
		}
	}
}

